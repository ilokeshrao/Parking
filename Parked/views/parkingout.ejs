<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- include('../partials/header.ejs')%>
        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../partials/left.ejs')%>
                        <div class="col-md-9">
                            <h2> Parking Management</h2>
                            <table class="table table-hover">
                                <tr>
                                  
                                        <th> S.No</th>
                                        <th>Vechile.No</th>
                                        <th> Vechile In Time</th>
                                        <th> Vechile Out Time</th>
                                        <th> Vechile Type</th>
                                        <th> Vechile Charge Amount</th>
                                        <th> Vechile Parked Date </th>
                                        <th> Vechile Status</th>
                                        <th> Print</th>
                                        <th> Delete</th>
                                   
                                </tr>
                                <%record.forEach((result,key)=>{%>
                                    <tr>
                                     
                                            <td>
                                                <%=key+1%>
                                            </td>
                                            <td><%=result.vno%></td>
                                            <td><%=result.vin%></td>
                                            <td><%=result.vout%></td>
                                            <td><%=result.vtype%></td>
                                            <td><%=result.amount%></td>
                                            <td><%=result.parkedDate%></td> 
                                            <%if(result.status=='OUT'){%>
                                            <td> <a href="/parkingupdate/<%=result.id%>"><button disabled class="btn btn-dark"><%=result.status%></button></a></td>
                                            <td>  <a href="/print/<%=result.id%>"><button class="btn btn-danger form-control">Way to print</button></a>

                                            <td> <a href="/deletepark/<%=result.id%>"><button class="btn btn-success ">Delete</button></a></td>   

                                            <% }else{%>
                                            <td> <a href="/parkingupdate/<%=result.id%>"><button ><%=result.status%></button></a></td>
                                           <% }%>

                                    </tr>
                                    <%})%>
                            </table>
                        </div>
                </div>
            </div>
        </section>
        <%- include('../partials/footer.ejs')%>


</body>

</html>